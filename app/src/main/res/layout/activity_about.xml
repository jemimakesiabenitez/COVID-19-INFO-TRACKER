<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".covid_19">



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/design_default_color_primary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_menu"
        android:layout_alignParentBottom="true"/>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="680dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="169dp"
                android:layout_height="184dp"
                android:layout_marginStart="140dp"
                android:layout_marginEnd="102dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/jem" />

            <TextView
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:text="@string/jem"
                android:textSize="20sp" />



            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="169dp"
                android:layout_height="184dp"
                android:layout_marginStart="140dp"
                android:layout_marginEnd="102dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/luch" />

            <TextView
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:text="@string/luch"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="169dp"
                android:layout_height="184dp"
                android:layout_marginStart="140dp"
                android:layout_marginEnd="102dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/alban" />

            <TextView
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:text="@string/alban"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="169dp"
                android:layout_height="184dp"
                android:layout_marginStart="140dp"
                android:layout_marginEnd="102dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/ugaban" />

            <TextView
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:text="@string/ugaban"
                android:textSize="20sp" />



        </LinearLayout>
    </ScrollView>


</RelativeLayout>